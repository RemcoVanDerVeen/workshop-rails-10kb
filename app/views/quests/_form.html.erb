    <%= form.label :difficulty, style: "display: block" %>
    <%= form.text_field :difficulty %>
  </div>

  <div>
    <%= form.label :reward_gold, style: "display: block" %>
    <%= form.number_field :reward_gold %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :assigned_at, style: "display: block" %>
    <%= form.datetime_field :assigned_at %>
  </div>

  <div>
    <%= form.label :completed_at, style: "display: block" %>
    <%= form.datetime_field :completed_at %>
  </div>

  <div>
    <%= form.label :hero_id, style: "display: block" %>
    <%= form.text_field :hero_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
