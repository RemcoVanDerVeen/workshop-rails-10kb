<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :item_type, style: "display: block" %>
    <%= form.text_field :item_type %>
  </div>

  <div>
    <%= form.label :rarity, style: "display: block" %>
    <%= form.text_field :rarity %>
  </div>

  <div>
    <%= form.label :value, style: "display: block" %>
    <%= form.number_field :value %>
  </div>

  <div>
    <%= form.label :equipped, style: "display: block" %>
    <%= form.checkbox :equipped %>
  </div>

  <div>
    <%= form.label :hero_id, style: "display: block" %>
    <%= form.text_field :hero_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
